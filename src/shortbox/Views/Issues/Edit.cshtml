@model shortbox.Models.Issue

@{
    ViewData["Title"] = "Edit Issue - ";
}

<h2>Edit Issue</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        @*<h4>Issue</h4>*@
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="SeriesName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="SeriesName" class="form-control" />
                <span asp-validation-for="SeriesName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IssueNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="IssueNumber" class="form-control" />
                <span asp-validation-for="IssueNumber" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" @*asp-format="{0:MMMM yyyy}"*@ />
                <span asp-validation-for="Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Publisher" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Publisher" class="form-control" />
                <span asp-validation-for="Publisher" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StoryArc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StoryArc" class="form-control" />
                <span asp-validation-for="StoryArc" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Writer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Writer" class="form-control" />
                <span asp-validation-for="Writer" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Penciller" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Penciller" class="form-control" />
                <span asp-validation-for="Penciller" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CoverArtist" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CoverArtist" class="form-control" />
                <span asp-validation-for="CoverArtist" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Inker" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Inker" class="form-control" />
                <span asp-validation-for="Inker" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Colorist" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Colorist" class="form-control" />
                <span asp-validation-for="Colorist" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Letterer" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Letterer" class="form-control" />
                <span asp-validation-for="Letterer" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
