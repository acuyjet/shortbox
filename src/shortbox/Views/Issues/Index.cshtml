@model IEnumerable<shortbox.Models.Issue>

@{
    ViewData["Title"] = "Issues - ";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Issues" asp-action="Index" method="get">
    <p>
        Enter search term: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
        <input type="submit" value="Clear" />
    </p>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SeriesName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IssueNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StoryArc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Writer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Penciller)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inker)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colorist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Letterer)
        </th>




        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SeriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IssueNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StoryArc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Writer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Penciller)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colorist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Letterer)
            </td>



            @*Anchor tag helpers*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>
